<div class="py-8">
  <div class="-my-2 overflow-x-auto sm:-mx-6 lg:-mx-8">
    <div class="py-2 align-middle inline-block min-w-full sm:px-6 lg:px-8">
      <div class="shadow overflow-hidden border-b border-gray-200 sm:rounded-lg">
        <table class="min-w-full divide-y divide-gray-200">
          <thead class="bg-gray-50">
            <tr>
              <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider w-1/6"><%= t('views.repo_search.index.table.owner') %></th>
              <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider w-1/2"><%= t('views.repo_search.index.table.repo') %></th>
              <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider w-1/3"><%= t('views.repo_search.index.table.topics') %></th>
            </tr>
          </thead>
          <tbody class="bg-white divide-y divide-gray-200">
            <% @repo_search.repos.each do |repo| %>
              <tr>
                <td class="px-6 py-4">
                  <div class="flex items-center">
                    <div class="flex-shrink-0 h-10 w-10">
                      <img class="h-10 w-10 rounded-full" src="<%= repo.avatar_url %>" alt="">
                    </div>
                    <div class="ml-4">
                      <div class="text-sm font-medium text-gray-900"><%= repo.username %></div>
                      <div class="text-sm text-gray-500"><%= repo.owner_type %></div>
                    </div>
                  </div>
                </td>
                <td class="px-6 py-4">
                  <div class="text-gray-900 underline"><%= link_to repo.name, repo.url %></div>
                  <div class="text-sm text-gray-500"><%= repo.description %></div>
                </td>
                <td class="px-6 py-4">
                  <% repo.topics.each do |topic| %>
                    <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full bg-green-100 text-green-800"> <%= topic %> </span>
                  <% end %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
<div class="container flex justify-center items-center">
  <%= paginate @repo_search.repos %>
</div>
